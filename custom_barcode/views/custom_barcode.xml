<?xml version="1.0" encoding="utf-8"?>

<odoo>
	<data>

		<!-- // Inherits the wizard view of preferences -->
		<record id="view_preferences_form_wizard" model="ir.ui.view">
			<field name="name">res.users.preferences.form</field>
			<field name="model">res.users</field>
			<field name='inherit_id'
				ref='base.view_users_form_simple_modif' />
			<field name="arch" type="xml">
				<xpath expr="//field[@name='lang']" position="after">
					<field name="warehouse_id" />
				</xpath>
			</field>
		</record>


		<!-- // Inherits the form view of preferences -->
		<record id="view_preferences_form_view" model="ir.ui.view">
			<field name="name">res.users.preferences</field>
			<field name="model">res.users</field>
			<field name='inherit_id' ref='base.view_users_form' />
			<field name="arch" type="xml">
				<xpath expr="//field[@name='lang']" position="after">
					<field name="warehouse_id" />
				</xpath>
			</field>
		</record>


	</data>
</odoo>
