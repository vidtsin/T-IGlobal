<?xml version="1.0" encoding="UTF-8"?>

<templates xml:space="preserve">

<!--//This displays the 1st form when the product barcode is scanned  -->
    <t t-name="location_view">
        <div class="o_stock_barcode_main_menu_container">
            <div class="o_stock_barcode_main_menu">
                <h1>Scan Source Location</h1>
                <div t-if="widget.message_demo_barcodes"
	class="message_demo_barcodes alert alert-info alert-dismissible"
	role="alert">
                    <button type="button" class="close"
	data-dismiss="alert">
                        <span aria-hidden="true"
	class="fa fa-times"></span>
                    </button>
                    We have created a few demo data and barcodes for you to explore the features. Print the
                    <a
	href="/stock_barcode/static/description/barcodes_demo_data.pdf"
	class='o_stock_barcodes_sheet' target="_blank">stock barcodes sheet</a>
                     to check out what this module can do !
                </div>
                <img src="/stock_barcode/static/img/barcode.png" />
                <p>Scan a location to create a new transfer from this location.<br /></p>
            </div>
        </div>
    </t>

    <t t-name="location_menu">
        <div class="o_stock_barcode_main_menu_container">
            <div class="o_stock_barcode_main_menu">
                <h1>Scan Destination Location</h1>
                <div t-if="widget.message_demo_barcodes"
	class="message_demo_barcodes alert alert-info alert-dismissible"
	role="alert">
                    <button type="button" class="close"
	data-dismiss="alert">
                        <span aria-hidden="true"
	class="fa fa-times"></span>
                    </button>
                    We have created a few demo data and barcodes for you to explore the features. Print the
                    <a
	href="/stock_barcode/static/description/barcodes_demo_data.pdf"
	class='o_stock_barcodes_sheet' target="_blank">stock barcodes sheet</a>
                     to check out what this module can do !
                </div>
                <img src="/stock_barcode/static/img/barcode.png" />
                <p>Scan a location to create a new transfer from this location.<br /></p>
            </div>
        </div>
    </t>

</templates>

