<odoo>
		<record id="view_mrp_department_form" model="ir.ui.view">
			<field name="name">mrp.department.form</field>
			<field name="model">mrp.department</field>
			<field name="arch" type="xml">
				<form string="Department">
					<sheet>
						<group>
							<field name="name" />
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<record id="view_mrp_department_tree" model="ir.ui.view">
			<field name="name">mrp.department.tree</field>
			<field name="model">mrp.department</field>
			<field name="arch" type="xml">
				<tree string="Department">
					<field name="name" />
				</tree>
			</field>
		</record>

		<record id="action_mrp_department_form"
			model="ir.actions.act_window">
			<field name="name">Department</field>
			<field name="res_model">mrp.department</field>
			<field name="view_mode">tree,form</field>
			<field name="help" type="html">
				<p class="o_view_nocontent_smiling_face">
					Create a Department
				</p>
			</field>
		</record>

		<menuitem action="action_mrp_department_form"
			id="menu_action_department_form"
			parent="stock.menu_stock_config_settings"
			sequence="1000" groups="stock.group_stock_manager"/>
</odoo>