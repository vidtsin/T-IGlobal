<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="view_mrp_requisition_form" model="ir.ui.view">
			<field name="name">mrp.requisition.form</field>
			<field name="model">mrp.requisition</field>
			<field name="arch" type="xml">
				<form string="MRP Requisition">
					<header>
						<button name="action_confirm"
							attrs="{'invisible': [('state', '!=','draft')]}" string="Confirm"
							type="object" />
						<button name="action_approve"
							attrs="{'invisible': [('state', '!=','waiting_approval')]}"
							string="Approve" type="object" />
						<button name="action_reject"
							attrs="{'invisible': [('state', '!=','waiting_approval')]}"
							string="Reject" type="object" />
						<button name="action_issue_products"
							attrs="{'invisible': [('state', 'not in',['inprogress','partially_available'])]}"
							string="Issue Product(s)" type="object" />
						<field name="state" widget="statusbar"
							statusbar_visible="draft,waiting_approval,inprogress,partially_available,received" />
					</header>
					<sheet>
						<div class="oe_title">
							<h1>
								<field name="name" readonly="1" />
							</h1>
						</div>
						<group>
							<group>
								<field name="sequence_id" invisible="1" />
								<field name="indentor_id" />
								<field name="request_type"
									attrs="{'readonly': [('state', '!=','draft')]}" />
								<field name="department_id"
									attrs="{'readonly': [('state', '!=','draft')]}" />
								<field name="location_id"
									attrs="{'readonly': [('state', '!=','draft')]}" />
								<field name="company_id" />
								<field name="picking_ids" invisible="1"
									widget="many2many_tags" />
							</group>
							<group>
								<field name="indent_date"
									attrs="{'readonly': [('state', '!=','draft')]}" required="1" />
								<field name="required_date"
									attrs="{'readonly': [('state', '!=','draft')]}" required="1" />
								<field name="approve_date" readonly="1" />
								<field name="requirement"
									attrs="{'readonly': [('state', '!=','draft')]}" required="1" />
								<field name="type"
									attrs="{'readonly': [('state', '!=','draft')]}" required="1" />
								<field name="mrp_production_id" invisible="0" />
							</group>
						</group>
						<notebook>
							<page string="Products">
								<field name="mrp_requistion_lines"
									attrs="{'readonly': [('state', '!=','draft')]}">
									<tree>
										<field name="product_id" />
										<field name="product_uom_qty" />
										<field name="product_uom_qty_issued" />
										<field name="product_uom_id" />
										<field name="qty_available" />
										<field name="required_on" />
									</tree>
									<form>
										<group>
											<group>
												<field name="product_id" />
												<field name="required_on" />
												<field name="product_uom_qty" />
												<field name="product_uom_id" />
												<field name="product_uom_qty_issued" />
											</group>
											<group>
												<field name="qty_available" readonly="1" />
											</group>
										</group>
										<group>
											<field name="name" />
										</group>
									</form>
								</field>
							</page>
							<page name="others" string="Others">
								<group>
									<group>
										<field name="warehouse_id"
											attrs="{'readonly': [('state', '!=','draft')]}" />
										<field name="picking_type_id"
											attrs="{'readonly': [('state', '!=','draft')]}" />
									</group>
								</group>
							</page>
						</notebook>
					</sheet>
				</form>
			</field>
		</record>

		<record id="view_mrp_requisition_tree" model="ir.ui.view">
			<field name="name">mrp.requisition.tree</field>
			<field name="model">mrp.requisition</field>
			<field name="arch" type="xml">
				<tree string="MRP Requisition ">
					<field name="sequence_id" />
					<field name="indent_date" />
					<field name="department_id" />
					<field name="type" />
					<field name="required_date" />
					<field name="approve_date" />
					<field name="approve_date" />
				</tree>
			</field>
		</record>

		<record id="action_mrp_requisition_form"
			model="ir.actions.act_window">
			<field name="name">MRP Requisition</field>
			<field name="res_model">mrp.requisition</field>
			<field name="view_mode">tree,form</field>
			<field name="help" type="html">
				<p class="o_view_nocontent_smiling_face">
					Create a MRP Requisition
				</p>
			</field>
		</record>

		<menuitem id="menu_action_mrp_requisition_form"
			name="MRP Requisition" parent="stock.menu_stock_root" sequence="10"
			groups="stock.group_stock_manager" />
		<menuitem action="action_mrp_requisition_form"
			id="sub_menu_action_mrp_requisition_form"
			parent="menu_action_mrp_requisition_form" sequence="1" />

	</data>
</odoo>